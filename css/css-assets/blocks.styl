// BLOCKS
@import '../assets/imports.styl'

.loader-pie
  rect 100px
  transform rotate(-90deg)
  display block
  margin 0 auto
  margin-top 100px
  border-radius 50%
  &--color2, &--color1
    fill none
    stroke-dasharray (24px*PI)px
    // stroke-width 24px
    stroke-width 5px
  &--color2
    stroke #3EBBEE
  &--color1
    stroke #F9C77F